<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

     <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clpr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

         <TextView
             android:id="@+id/txtGuia"
             android:layout_width="166dp"
             android:layout_height="180dp"
             android:background="@drawable/shadowimages"
             android:layout_marginTop="10dp"
             android:shadowRadius="50"
             android:shadowColor="@color/negro"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="1.0"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"></TextView>

         <ImageView
             android:id="@+id/imgProdsTodos"
             android:layout_width="160dp"
             android:layout_height="160dp"
             android:layout_marginStart="2dp"
             android:layout_marginTop="8dp"
             android:layout_marginEnd="2dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="@+id/txtGuia"
             app:layout_constraintTop_toTopOf="@+id/txtGuia" />

         <ImageView
             android:id="@+id/imageView7"
             android:layout_width="43dp"
             android:layout_height="43dp"
             android:src="@drawable/circulo_forma"
             app:layout_constraintEnd_toEndOf="@+id/imgProdsTodos"
             app:layout_constraintTop_toTopOf="@+id/imgProdsTodos" />

         <com.like.LikeButton
             android:id="@+id/star_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:icon_size="30dp"
             app:circle_end_color="@color/grisoscuro"
             app:circle_start_color="@color/grey_font"
             app:dots_primary_color="@color/grisoscuro"
             app:dots_secondary_color="@color/grey_font"
             app:like_drawable="@drawable/ic_favorito_off"
             app:unlike_drawable="@drawable/ic_iconcorazon"

             app:layout_constraintBottom_toBottomOf="@+id/imageView7"
             app:layout_constraintEnd_toEndOf="@+id/imageView7"
             app:layout_constraintStart_toStartOf="@+id/imageView7"
             app:layout_constraintTop_toTopOf="@+id/imageView7" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_NombreProducto"
        android:layout_width="166dp"
        android:layout_height="30dp"
        android:background="@drawable/shadow"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="TextView"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clpr"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>