<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clpr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtGuia"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadowimages"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageView
            android:id="@+id/imgProdsTodos"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="@+id/txtGuia"
            app:layout_constraintStart_toStartOf="@+id/txtGuia"
            app:layout_constraintTop_toTopOf="@+id/txtGuia" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circulo_forma"
            app:layout_constraintEnd_toEndOf="@+id/imgProdsTodos"
            app:layout_constraintTop_toTopOf="@+id/imgProdsTodos" />

        <com.like.LikeButton
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:circle_end_color="@color/grisoscuro"
            app:circle_start_color="@color/grey_font"
            app:dots_primary_color="@color/grisoscuro"
            app:dots_secondary_color="@color/grey_font"
            app:icon_size="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintLeft_toLeftOf="@id/imageView7"
            app:layout_constraintRight_toRightOf="@id/imageView7"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imgProdsTodos"
            app:like_drawable="@drawable/ic_favorito_off"
            app:unlike_drawable="@drawable/ic_iconcorazon"></com.like.LikeButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_NombreProductoAll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/shadow"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/clpr"
        app:layout_constraintStart_toStartOf="@+id/clpr"
        app:layout_constraintTop_toBottomOf="@+id/clpr" />


</androidx.constraintlayout.widget.ConstraintLayout>